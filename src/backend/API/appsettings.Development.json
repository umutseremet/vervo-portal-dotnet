{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug",
      "VervoPortal": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "VervoPortal": "Debug"
      }
    }
  },
  "JwtSettings": {
    "Secret": "DevelopmentSecretKeyThatIsAtLeast32CharactersLong123456789!@#$%",
    "Issuer": "VervoPortalAPI-Dev",
    "Audience": "VervoPortalClient-Dev",
    "ExpiryMinutes": 60
  },
  "RedmineSettings": {
    "BaseUrl": "http://localhost:3000",
    "ApiKey": "development-api-key",
    "TimeoutSeconds": 10,
    "MaxRetryAttempts": 1,
    "RetryDelaySeconds": 1,
    "UseHttps": false,
    "ValidateSslCertificate": false
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "http://127.0.0.1:5500",
    "http://localhost:5500",
    "http://localhost:8080",
    "https://localhost:3000",
    "https://localhost:5500"
  ],
  "RateLimiting": {
    "GlobalLimiter": {
      "PermitLimit": 1000,
      "Window": "00:01:00",
      "QueueLimit": 50
    },
    "AuthLimiter": {
      "PermitLimit": 20,
      "Window": "00:01:00",
      "QueueLimit": 5
    }
  },
  "Security": {
    "EnableApiKeyValidation": false,
    "RequireHttps": false,
    "EnableRequestSizeLimit": false,
    "EnableCorsValidation": false
  },
  "HealthChecks": {
    "RedmineTimeoutSeconds": 5,
    "EnableDetailedErrors": true
  },
  "Performance": {
    "EnableResponseCompression": false,
    "EnableOutputCaching": false,
    "MaxConcurrentRequests": 1000
  }
}