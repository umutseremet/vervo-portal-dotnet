{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ClientSettings": {
    "CompanyName": "Aslan Group",
    "PortalTitle": "Aslan Group Portal",
    "ContactEmail": "info@aslangroup.com",
    "SupportEmail": "support@aslangroup.com",
    "CompanyWebsite": "https://www.aslangroup.com",
    "CompanyAddress": "İstanbul, Türkiye",
    "CompanyPhone": "+90 212 XXX XX XX",
    "TimeZone": "Europe/Istanbul",
    "Language": "tr-TR",
    "Currency": "TRY"
  },
  
  "JwtSettings": {
    "Secret": "YourSecretKeyThatIsAtLeast32CharactersLong123456789",
    "Issuer": "VervoPortalAPI",
    "Audience": "VervoPortalClient", 
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7,
    "EnableRefreshToken": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ClockSkew": "00:05:00"
  },
  
  "Redmine": {
    "BaseUrl": "http://localhost:3000/",
    "ApiKey": "",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 2,
    "UseHttps": false,
    "ValidateSslCertificate": true
  },
  
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:5500", 
    "http://127.0.0.1:5500",
    "http://localhost:8080"
  ],
  
  "RateLimiting": {
    "GlobalLimiter": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 10
    },
    "AuthLimiter": {
      "PermitLimit": 10,
      "Window": "00:01:00",
      "QueueLimit": 2
    }
  },
  
  "Security": {
    "EnableApiKeyValidation": false,
    "RequireHttps": false,
    "EnableRequestSizeLimit": true,
    "MaxRequestSizeBytes": 10485760,
    "EnableCorsValidation": true,
    "AllowedFileExtensions": [".jpg", ".jpeg", ".png", ".pdf", ".xlsx", ".docx"],
    "EnableSecurityHeaders": true
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=VervoPortal;Trusted_Connection=true;MultipleActiveResultSets=true",
    "RedisConnection": "localhost:6379",
    "LoggingConnection": "Server=(localdb)\\mssqllocaldb;Database=VervoPortalLogs;Trusted_Connection=true"
  },
  
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": true,
    "FromEmail": "noreply@vervo.com",
    "FromName": "{{CompanyName}} Portal",
    "EnableEmailNotifications": false
  },
  
  "FileUpload": {
    "MaxFileSizeBytes": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".pdf", ".xlsx", ".docx"],
    "UploadPath": "uploads/",
    "EnableVirusScan": false,
    "TempPath": "temp/"
  },
  
  "CacheSettings": {
    "DefaultExpirationMinutes": 30,
    "UserSessionExpirationMinutes": 60,
    "ApiResponseCacheMinutes": 5,
    "EnableDistributedCache": false,
    "EnableMemoryCache": true
  },
  
  "NotificationSettings": {
    "EnablePushNotifications": false,
    "EnableEmailNotifications": false,
    "EnableSmsNotifications": false,
    "DefaultNotificationTypes": ["System", "Security", "Updates"],
    "RetentionDays": 30
  },
  
  "ApiSettings": {
    "Version": "v1",
    "EnableSwagger": true,
    "EnableApiVersioning": true,
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "EnablePagination": true,
    "EnableDetailedErrors": false
  },
  
  "Performance": {
    "EnableResponseCompression": true,
    "EnableOutputCaching": true,
    "CacheDurationSeconds": 300,
    "EnableHttpsRedirection": false,
    "MaxConcurrentRequests": 100
  },
  
  "HealthChecks": {
    "EnableHealthChecks": true,
    "EnableDetailedErrors": false,
    "CheckIntervalSeconds": 30,
    "TimeoutSeconds": 10,
    "RedmineTimeoutSeconds": 5
  },
  
  "FeatureFlags": {
    "EnableUserRegistration": false,
    "EnablePasswordReset": true,
    "EnableTwoFactorAuth": false,
    "EnableAuditLogging": true,
    "EnableRealTimeUpdates": false,
    "EnableAdvancedReporting": true,
    "EnableFileUpload": true,
    "EnableNotifications": true
  },
  
  "VehicleTracking": {
    "EnableRealTimeTracking": true,
    "UpdateIntervalSeconds": 30,
    "EnableGeofencing": true,
    "EnableRouteOptimization": false,
    "MaxVehiclesPerUser": 100,
    "HistoryRetentionDays": 90
  },
  
  "Reporting": {
    "EnableScheduledReports": true,
    "EnableExcelExport": true,
    "EnablePdfExport": true,
    "MaxReportRows": 10000,
    "ReportCacheDurationMinutes": 15,
    "EnableCharts": true
  }
}